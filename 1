	<script>
    var mobileNav = document.getElementById('j_mobile-menu');
    var menuUl = document.getElementById('j_menu-ul');
    mobileNav.addEventListener('click', mobileNavControl)
    function mobileNavControl(e) {
        if (menuUl.style.display === 'block') {
            menuUl.style.display = 'none';
        } else {
            menuUl.style.display = 'block';
        }
    }
</script>
